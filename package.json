  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start-dev": "npx nodemon",
    "start": "node dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "cd frontend && npm install && ng build --configuration production"
