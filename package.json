    ],
    "ext": "js,ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "npx ts-node ./src/index.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
